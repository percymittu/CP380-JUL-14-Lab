@page
@model CP380_PubsWeb.Pages.Emps.IndexModel
@{
}
<div class="row">
    <div class="col-12">
        <h2 class="text-info">Employees</h2>
    </div>
    <div class="col-12">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">FirstName</th>
                    <th scope="col">LastName</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var e in Model.NoOfEmps)
                {
                <tr>
                    <th scope="row">@Html.DisplayFor(emp => e.emp_id)</th>
                    <td>
                        @Html.DisplayFor(emp => e.fname)
                    </td>
                    <td>
                        @Html.DisplayFor(emp => e.lname)
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
